#compute distance matrices and save them in D
l = subcentroids
D = matrix(0, cols=l, rows=l*M)
for(j in 1:M) {
    subc = codebook[(j-1)*l+1:j*l,]
    D[(j-1)*l+1:j*l,] = dist(subc) #compute_distance_matrix(subc)
}


